EXE_INC = \
    -I$(LIB_SRC)/finiteVolume/lnInclude \
    -I$(LIB_SRC)/meshTools/lnInclude

LIB_LIBS = \
    -lfiniteVolume \
    -lmeshTools

# Optional: Enable encryption support with libsodium
# Set FOAM_USE_SODIUM=1 environment variable before wmake to enable
ifdef FOAM_USE_SODIUM
    EXE_INC += -DFOAM_USE_SODIUM
    LIB_LIBS += -lsodium
endif
