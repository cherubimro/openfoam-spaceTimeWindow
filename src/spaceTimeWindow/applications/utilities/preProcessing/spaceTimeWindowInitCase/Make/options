endif

ifdef FOAM_USE_ZSTD
    EXE_INC += -DFOAM_USE_ZSTD
endif

EXE_LIBS = \
    -lfiniteVolume \
    -lmeshTools \
    -ldynamicMesh \
    -L$(FOAM_USER_LIBBIN) \
    -lspaceTimeWindow

